{
  "name": "linkorb/flex-middleware",
  "description": "Configure (using a .yaml file) a queue of HTTP middlewares for any PHP application (Symfony 4, Radvance, Silex)",
  "keywords": ["middleware", "PSR15"],
  "license": "MIT",
  "autoload":{
    "psr-4":{
      "FlexMiddleware\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FlexMiddlewareTest\\": "tests"
    }
  },
  "require": {
    "php": "^7.1",
    "symfony/yaml": "^3.0|^4.0",
    "psr/http-message": "^1.0.1",
    "psr/http-server-handler": "^1.0.1",
    "psr/http-server-middleware": "^1.0.1",
    "middlewares/utils": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "zendframework/zend-diactoros": "^2.1",
    "middlewares/uuid": "^1.1",
    "middlewares/client-ip": "^1.3"
  }
}
